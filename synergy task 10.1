#include <stdio.h>
#include <stdlib.h>

int cmpfunc(const void *a, const void *b) {
   return (*(int*)a - *(int*)b);
}

int main() {
    int rows, cols;

    printf("Введите количество строк и столбцов через пробел: ");
    scanf("%d %d", &rows, &cols);

    int arr[rows][cols];

    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            printf("Введите элемент [%d][%d]: ", i, j);
            scanf("%d", &arr[i][j]);
        }
    }

    printf("Введенный массив:\n");
    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    // сортировка массива построчно
    for(int i = 0; i < rows; i++) {
        qsort(arr[i], cols, sizeof(int), cmpfunc);
    }

    printf("Отсортированный массив:\n");
    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}
