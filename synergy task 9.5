#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int rows, cols;

    printf("Введите количество строк и столбцов через пробел: ");
    scanf("%d %d", &rows, &cols);

    int arr[rows][cols];

    srand(time(NULL)); // инициализируем генератор псевдослучайных чисел

    printf("Сгенерированный массив:\n");
    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            arr[i][j] = rand() % 10 - 2; // генерируем число в диапазоне от -2 до 7
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}
