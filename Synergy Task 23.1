# coding=windows-1251
class CashRegister:
    def __init__(self):
        self.money = 0

    def top_up(self, amount):
        self.money += amount

    def count_1000(self):
        return self.money // 1000

    def take_away(self, amount):
        if self.money >= amount:
            self.money -= amount
        else:
            raise ValueError("Недостаточно денег в кассе")
