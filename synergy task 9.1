#include <iostream>

int main() {
    const int SIZE = 7; // размер массива
    int arr[SIZE]; // объявление массива

    // ввод элементов массива
    for (int i = 0; i < SIZE; i++) {
        std::cout << "Введите " << i + 1 << "-й элемент массива: ";
        std::cin >> arr[i];
    }

    // вывод элементов массива
    for (int i = 0; i < SIZE; i++) {
        std::cout << "Элемент массива №" << i << ": " << arr[i] << std::endl;
    }

    return 0;
}
