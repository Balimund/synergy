#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n); // получаем количество чисел
    int nums[n]; // создаем массив для хранения чисел
    // получаем числа от пользователя и заполняем ими массив
    for (int i = 0; i < n; i++) {
        scanf("%d", &nums[i]);
    }
    int min = nums[0]; // устанавливаем начальные значения для минимума и максимума
    int max = nums[0];
    int sum = 0; // переменная для хранения суммы
    // находим минимальное и максимальное значения и вычисляем сумму
    for (int i = 0; i < n; i++) {
        if (nums[i] < min) {
            min = nums[i];
        }
        if (nums[i] > max) {
            max = nums[i];
        }
        sum += nums[i];
    }
    double avg = (double)sum / n; // вычисляем среднее арифметическое
    printf("Minimum: %d\nMaximum: %d\nSum: %d\nAverage: %.2f\n", min, max, sum, avg); // выводим результаты
    return 0;
}
